<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Change Password Form"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="@color/colorBlue"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_oldPass"
            android:hint="Old Password"
            android:gravity="center"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_newPass"
            android:hint="New Password"
            android:gravity="center"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_configPass"
            android:hint="Config Password"
            android:gravity="center"
            />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_marginTop="20dp"  >
          <Button
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Ok"
              android:background="@drawable/background_button"
              android:layout_weight="1"
              android:layout_marginRight="20dp"
              android:id="@+id/btn_ChangePass"/>
          <Button
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Cancel"
              android:background="@drawable/background_button"
              android:layout_weight="1"
              android:layout_marginLeft="20dp"
              android:id="@+id/btn_cancelChangePass"/>

      </LinearLayout>

    </LinearLayout>
</LinearLayout>